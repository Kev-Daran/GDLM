{
    "manifest_version": 3,
    "name": "AI Agent Assistant",
    "version": "1.0",
    "description": "Multi-agent system with resume support and professional search",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://*.run.app/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}